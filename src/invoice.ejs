<!DOCTYPE html>
<html lang="zh-Hant-TW">

  <%- include('layout/_head.ejs', { pageTitle: '付款｜Sweetaste' }) %>

  <body>
    <%- include('layout/_navbar.ejs', { navLink: '付款' }) %>

    <section class="checkout mt-0 mt-md-45 mb-md-60">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-10 px-0 px-md-10">
            <div class="row">
              <div class="col-md-7">
                <div class="row no-gutters align-items-baseline text-light bg-primary py-30 px-40">
                  <div class="col">
                    <h2>發票</h2>
                  </div>
                  <div class="col">
                    <div class="checkout-progress">
                      <div class="checkout-progress-item finish"></div>
                      <div class="checkout-progress-item finish"></div>
                      <div class="checkout-progress-item active"></div>
                    </div>
                  </div>
                </div>
                <div class="btn-group bg-primary w-100 px-40 my-n1">
                  <a href="e-invoice.html" class="btn btn-fix btn-primary border border-light">電子發票</a>
                  <a href="invoice.html" class="btn btn-fix btn-light text-primary">郵寄發票</a>
                </div>
                <form>
                  <div class="form-row mx-0 text-light bg-primary py-30 px-40">
                    <div class="form-group col-12">
                      <div class="d-flex justify-content-between align-items-center">
                        <label for="address" class="h5">地址</label>
                        <div class="form-check d-none d-md-block">
                          <input class="form-check-input" type="checkbox" value="" id="same-address">
                          <label class="form-check-label" for="same-address">同運送地址</label>
                        </div>
                      </div>
                      <div class="form-row mb-8">
                        <div class="col-6">
                          <select class="form-control bg-light" id="city">
                            <option selected>高雄市</option>
                          </select>
                        </div>
                        <div class="col-6">
                          <select class="form-control bg-light" id="county">
                            <option selected>新興區</option>
                          </select>
                        </div>
                      </div>
                      <input type="text" class="form-control bg-light" id="address" placeholder="幸福路 520 號">
                    </div>
                    <div class="form-group col-12 mb-0">
                      <label for="tax-id-number" class="h5">統一編號（選填）</label>
                      <input type="tel" class="form-control bg-light" id="tax-id-number" placeholder="12345678">
                    </div>
                  </div>
                  <a href="#" class="btn btn-lg btn-lg-fix btn-block btn-warning text-primary">確認結帳</a>
                </form>
              </div>

              <%- include('layout/_checkout-summary.ejs') %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include('layout/_footer.ejs') %>

    <%- include('layout/_scripts.ejs') %>
  </body>

</html>
