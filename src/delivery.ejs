<!DOCTYPE html>
<html lang="zh-Hant-TW">

  <%- include('layout/_head.ejs', { pageTitle: '運送｜Sweetaste' }) %>

  <body>
    <%- include('layout/_navbar.ejs', { navLink: '運送' }) %>

    <section class="checkout mt-0 mt-md-45 mb-md-60">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-10 px-0 px-md-10">
            <div class="row">
              <div class="col-md-7">
                <div class="row no-gutters align-items-baseline text-light bg-primary pt-30 px-40">
                  <div class="col">
                    <h2>運送</h2>
                  </div>
                  <div class="col">
                    <div class="checkout-progress">
                      <div class="checkout-progress-item active"></div>
                      <div class="checkout-progress-item"></div>
                      <div class="checkout-progress-item"></div>
                    </div>
                  </div>
                </div>
                <form class="my-n1">
                  <div class="form-row mx-0 text-light bg-primary py-30 px-40">
                    <div class="form-group col-6">
                      <label for="last-name" class="h5">姓氏</label>
                      <input type="text" class="form-control bg-light" id="last-name" placeholder="王">
                    </div>
                    <div class="form-group col-6">
                      <label for="first-name" class="h5">名字</label>
                      <input type="text" class="form-control bg-light" id="first-name" placeholder="小名">
                    </div>
                    <div class="form-group col-12">
                      <label for="phone" class="h5">電話</label>
                      <input type="tel" class="form-control bg-light" id="phone" placeholder="0912-345-678">
                    </div>
                    <div class="form-group col-12 mb-0">
                      <label for="address" class="h5">地址</label>
                      <div class="form-row mb-8">
                        <div class="col-6">
                          <select class="form-control bg-light" id="city">
                            <option selected>高雄市</option>
                          </select>
                        </div>
                        <div class="col-6">
                          <select class="form-control bg-light" id="county">
                            <option selected>新興區</option>
                          </select>
                        </div>
                      </div>
                      <input type="text" class="form-control bg-light" id="address" placeholder="幸福路 520 號">
                    </div>
                  </div>
                  <a href="#" class="btn btn-lg btn-lg-fix btn-block btn-warning text-primary">下一步</a>
                </form>
              </div>
              <div class="col-md-5 d-none d-md-block">
                <div class="row text-secondary">
                  <div class="col-12 mb-20">
                    <h4 class="text-center bg-light py-16 mb-0">訂單摘要</h4>
                    <div class="py-16 px-20 border border-light">
                      <div class="row">
                        <div class="col-12 d-flex justify-content-between mb-8">
                          <span>小計</span>
                          <span>NT$ 2,700</span>
                        </div>
                        <div class="col-12 d-flex justify-content-between mb-8">
                          <span>運費</span>
                          <span>NT$ 300</span>
                        </div>
                        <div class="col-12 d-flex justify-content-between mt-8">
                          <span class="h5 mb-0">總計</span>
                          <span class="h5 mb-0">NT$ 3,000</span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-12">
                    <h4 class="text-center bg-light py-16 mb-0">購物清單</h4>
                    <div class="py-16 px-20 border border-light">
                      <div class="row">
                        <div class="col-12 mb-16">
                          <div class="row">
                            <div class="col-6">
                              <div class="bg-img-fluid w-100 h-100" style="background-image: url('https://bit.ly/2QvsT63');"></div>
                            </div>
                            <div class="col-6">
                              <div class="d-flex flex-column justify-content-center py-16">
                                <span>焦糖馬卡龍（2）</span>
                                <h5 class="mb-0">NT$ 900</h5>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="col-12 mb-16">
                          <div class="row">
                            <div class="col-6">
                              <div class="bg-img-fluid w-100 h-100" style="background-image: url('https://bit.ly/2zBDAxX');"></div>
                            </div>
                            <div class="col-6">
                              <div class="d-flex flex-column justify-content-center py-16">
                                <span>焦糖馬卡龍（2）</span>
                                <h5 class="mb-0">NT$ 900</h5>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="col-12">
                          <div class="row">
                            <div class="col-6">
                              <div class="bg-img-fluid w-100 h-100" style="background-image: url('https://bit.ly/2zKOP7w');"></div>
                            </div>
                            <div class="col-6">
                              <div class="d-flex flex-column justify-content-center py-16">
                                <span>焦糖馬卡龍（2）</span>
                                <h5 class="mb-0">NT$ 900</h5>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include('layout/_footer.ejs') %>

    <%- include('layout/_scripts.ejs') %>
  </body>

</html>
